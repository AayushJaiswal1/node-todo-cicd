@Library('Shared')_
pipeline{
    agent { label 'dev-node' }
    
    stages{
        stage("Code Clone in shared library"){
            steps{
              echo "using shared library"
              clone("https://github.com/AayushJaiswal1/node-todo-cicd","master")
            }
        }
        stage("Code Build & Test"){
            steps{
              build("note-app")
            }
        }
        stage("push to docker hub"){
            steps{
                  dockerpush("dockerHubCreds","note-app", "latest")
                }
                 
            }
        stage("Deploy"){
            steps{
               deploy()
            }
        }
    }
}
